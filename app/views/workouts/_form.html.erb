<%= form_for(@workout, :html => {:multipart => true}) do |f| %>
  <% if @workout.errors.any? %>
    <div id="error_explanation">
      <h2>Oops! <%= pluralize(@workout.errors.count, "error") %> stopped this workout from being saved:</h2>

      <ul>
      <% @workout.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>


  <! Unattach MP3 attachement >
  <div class="field">
    <%= f.label :mp3_intro %><br />
    <intro><%= f.file_field :mp3_intro %><small><%= link_to '(cancel)', '#', :class => 'cancel_upload_link' %></small></intro>
    <% if @workout.mp3_intro.exists? %>
      <br />
      <small>
        <mp3_intro_name>
          Currently attached: <%= @workout.mp3_intro_file_name %>
          (<%= link_to 'unattach', unattach_intro_url(:id => @workout.id), :remote => true, :confirm => 'Are you sure?', :disabled => true %>)
        </mp3_intro_name>
      </small>
    <% end %>
    </div>
    <div class="field">
      <%= f.label :mp3_part_one %><br />
      <part_one><%= f.file_field :mp3_part_one %><small><%= link_to '(cancel)', '#', :class => 'cancel_upload_link' %></small></part_one>
      <% if @workout.mp3_part_one.exists? %>
        <br />
        <small>
          <mp3_part_one_name>
            Currently attached: <%= @workout.mp3_part_one_file_name %>
            (<%= link_to 'unattach', unattach_part_one_url(:id => @workout.id), :remote => true, :confirm => 'Are you sure?', :disabled => true %>)
          </mp3_part_one_name>
        </small>
      <% end %>
    </div>
    <div class="field">
      <%= f.label :mp3_part_two %><br />
      <part_two><%= f.file_field :mp3_part_two %><small><%= link_to '(cancel)', '#', :class => 'cancel_upload_link' %></small></part_two>
      <% if @workout.mp3_part_two.exists? %>
        <br />
        <small>
          <mp3_part_two_name>
            Currently attached: <%= @workout.mp3_part_two_file_name %>
            (<%= link_to 'unattach', unattach_part_two_url(:id => @workout.id), :remote => true, :confirm => 'Are you sure?', :disabled => true %>)
          </mp3_part_two_name>
        </small>
      <% end %>
    </div>
    <div class="field">
      <%= f.label :mp3_part_three %><br />
      <part_three><%= f.file_field :mp3_part_three %><small><%= link_to '(cancel)', '#', :class => 'cancel_upload_link' %></small></part_three>
      <% if @workout.mp3_part_three.exists? %>
        <br />
        <small>
          <mp3_part_three_name>
            Currently attached: <%= @workout.mp3_part_three_file_name %>
            (<%= link_to 'unattach', unattach_part_three_url(:id => @workout.id), :remote => true, :confirm => 'Are you sure?', :disabled => true %>)
          </mp3_part_three_name>
        </small>
      <% end %>
    </div>
    <div class="field">
      <%= f.label :mp3_unguided %><br />
      <%= f.file_field :mp3_unguided %>
      <% if @workout.mp3_unguided.exists? %>
        <br />
        <small>
          <mp3_unguided_name>
            Currently attached: <%= @workout.mp3_unguided_file_name %>
            (<%= link_to 'unattach', unattach_unguided_url(:id => @workout.id), :remote => true, :confirm => 'Are you sure?', :disabled => true %>)
          </mp3_unguided_name>
        </small>
      <% end %>
    </div>
  </div>


  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

